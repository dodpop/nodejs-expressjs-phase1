<%- include('header'); %>
    <body>
        <%- include('nav'); %>
        <div class="container pt-5">
            <div class="row my-3">
                <div class="col-md-8 mb-4"> 
                    <form class="form-horizontal" method="post" action="/updatedata" enctype="multipart/form-data">
                        <input type="hidden" class="form-control" name="_id" value="<%- productdata._id%>">
                      <div class="form-group">
                        <label class="control-label col-sm-2">SKU</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="sku" value="<%- productdata.sku%>">
                        </div>
                      </div>
                        <div class="form-group">
                          <label class="control-label col-sm-2">ชื่อสินค้า</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" name="name" value="<%- productdata.name%>">
                          </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">ราคา</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" name="price" value="<%- productdata.price%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">ภาพสินค้า</label>
                            <div class="col-sm-10">
                                <img class="card-img-top" src="/images/products/<%- productdata.productimage %>" alt="" />
                                <input type="hidden" class="form-control" name="currentimg" value="<%- productdata.productimage%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">ภาพสินค้า</label>
                            <div class="col-sm-10">
                              <input type="file" class="form-control" name="image">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">รายละเอียด</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" cols="30" rows="4" name="description"><%- productdata.description%></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">บันทึก</button>
                          </div>
                        </div>
                    </form>
                </div>
            </div>

             

        </div>

        <%- include('footer'); %>
    </body>
</html>
